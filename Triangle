package lesson4;

import java.util.Scanner;

public class Triangle {
    public static void main(String[] args) {
        System.out.println("Please give first lenght");
        Scanner scanner = new Scanner(System.in);
        int number = scanner.nextInt();

        System.out.println("Please give second lenght");
        Scanner scanner1 = new Scanner(System.in);
        int number2 = scanner.nextInt();

        System.out.println("Please give third lenght");
        Scanner scanner2 = new Scanner(System.in);
        int number3 = scanner.nextInt();

        int a = number;
        int b = number2;
        int c = number3;

        if (a + b > c) {
            System.out.println("You can build triangle");
        }

        if (a + c > b){
            System.out.println("You can build triangle");
        }
        
        if (c + b > a){
            System.out.println("You can build triangle");
        }
        
        else {
            System.out.println("You cannot build triangle");
        }



    }
}
